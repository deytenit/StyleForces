{
  "name": "styleforces",
  "version": "2.0.3",
  "description": "The Codeforces toolkit to make life easier for teachers and worse for students.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "npm exec tsc --build",
    "clean": "npm exec tsc --build --clean",
    "bootstrap": "npm run build && npm run start",
    "lint": "npm exec eslint . && npm exec prettier --check .",
    "format": "npm exec eslint --fix . && npm exec prettier --write . > /dev/null"
  },
  "license": "MIT",
  "keywords": [
    "codeforces",
    "toolkit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unknowableshade/StyleForces.git"
  },
  "author": {
    "name": "unknowableshade",
    "email": "60275123+unknowableshade@users.noreply.github.com",
    "url": "https://ermnvldmr.com"
  },
  "bugs": {
    "url": "https://github.com/unknowableshade/StyleForces/issues"
  },
  "readme": "https://github.com/unknowableshade/StyleForces#readme",
  "engines": {
    "node": "18.x.x",
    "npm": "*"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12"
  }
}
